<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_finance_document">
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>
        <div class="header" style="border-bottom: 1px solid !important;">
            <div class="row mt32 mb32">
                <div class="col-8">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 50px;" />
                </div>
                <div class="col-4 text-right" style="background-color:#ebb43f !important;border: 2px !important; border-radius: 5px !important; padding: 10px 10px 10px 0px !important; margin-left: -10px; border-style: solid !important; border-color: #fff; color:#fff !important; font:12px lucida-console,sans-serif !important;">
                    <div t-if="company.partner_id">
                      <span t-field="company.partner_id"/>
                      <br/>
                    </div>
                    <div t-if="company.partner_id.street">
                      <span t-field="company.partner_id.street"/>
                      <br/>
                    </div>
                    <div t-if="company.partner_id.street2">
                      <span t-field="company.partner_id.street2"/>
                      <br/>
                    </div>
                    <div t-if="company.partner_id.city">
                      <span t-field="company.partner_id.city"/>
                      <br/>
                    </div>
                    <div t-if="company.partner_id.country_id">
                      <span t-field="company.partner_id.country_id"/>
                      <br/>
                    </div>
                    <div t-if="company.partner_id.vat">
                      <span t-field="company.partner_id.vat"/>
                      <br/>
                    </div>
                </div>
            </div>
        </div>
        <t t-call="web.external_layout_background">
            <div style="background-color:#ebb43f !important;border: 2px !important; border-radius: 5px !important; padding: 15px 15px 0px 15px !important; color: white !important;">
                <div class="row">
                    <div class="col-8">
                        <h2 style="color: white !important;"><b>FINANCE REPORT DOCUMENT</b></h2>
                    </div>
                    <div class="col-4 text-right">
                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', doc.display_name, 500, 500)" style="max-height:50pt;max-width:100%;margin-right:20px;"/>
                    </div>
                </div>
                
                <h3>
                    <span t-field="doc.partner_id.name"/>
                </h3>
                <div id="informations" class="row mt32 mb32">
                    <div class="col-auto mw-100 mb-2">
                        <strong style="color: white !important;">Mobile:</strong>
                        <p class="m-0" t-field="doc.partner_id.mobile"/>
                    </div>
                    <div t-if="doc.start_date" class="col-auto mw-100 mb-2">
                        <strong style="color: white !important;">Start Date:</strong>
                        <p class="m-0" t-field="doc.start_date"/>
                    </div>
                    <div t-if="doc.end_date" class="col-auto mw-100 mb-2">
                        <strong style="color: white !important;">End Date:</strong>
                        <p class="m-0" t-field="doc.end_date"/>
                    </div>
                    <div t-if="doc.create_date" class="col-auto mw-100 mb-2">
                        <strong style="color: white !important;">Create Date:</strong>
                        <p class="m-0" t-field="doc.create_date"/>
                    </div>
                </div>
            </div>
            <div class="text-justify">
                <br/>
                <h3>
                    INCOME
                </h3>
                <table>
                    <thead>
                        <tr class="active" style="background-color:#ebb43f !important;border: 1px !important; border-style: solid !important; border-color: #fff; color:#fff !important;">
                            <th width="115px" class="text-center" style="color: white">Food</th>
                            <th width="115px" class="text-center" style="color: white">Salary</th>
                            <th width="115px" class="text-center" style="color: white">Entertainment</th>
                            <th width="115px" class="text-center" style="color: white">Bill</th>
                            <th width="115px" class="text-center" style="color: white">Charity</th>
                            <th width="115px" class="text-center" style="color: white">Other</th>
                            <th width="115px" class="text-center" style="color: white">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.report_line_ids.filtered(lambda x: x.type == 'income')" t-as="print_line">
                            <tr>
                                <td class="text-right">
                                    <span t-field="print_line.food"/> 
                                </td>
                                <td class="text-right">
                                    <span t-field="print_line.salary"/> 
                                </td>
                                <td class="text-right">
                                    <span t-field="print_line.entertain"/> 
                                </td>
                                <td class="text-right">
                                    <span t-field="print_line.bill"/> 
                                </td>
                                <td class="text-right">
                                    <span t-field="print_line.charity"/> 
                                </td>
                                <td class="text-right">
                                    <span t-field="print_line.other"/> 
                                </td>
                                <td class="text-right">
                                    <span t-field="print_line.total"/> 
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <br/>
                <h3>
                    OUTCOME
                </h3>
                <table>
                    <thead>
                        <tr class="active" style="background-color:#ebb43f !important;border: 1px !important; border-style: solid !important; border-color: #fff; color:#fff !important;">
                            <th width="115px" class="text-center" style="color: white">Food</th>
                            <th width="115px" class="text-center" style="color: white">Salary</th>
                            <th width="115px" class="text-center" style="color: white">Entertainment</th>
                            <th width="115px" class="text-center" style="color: white">Bill</th>
                            <th width="115px" class="text-center" style="color: white">Charity</th>
                            <th width="115px" class="text-center" style="color: white">Other</th>
                            <th width="115px" class="text-center" style="color: white">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.report_line_ids.filtered(lambda x: x.type == 'outcome')" t-as="print_line">
                            <tr>
                                <td class="text-right">
                                    <span t-field="print_line.food"/> 
                                </td>
                                <td class="text-right">
                                    <span t-field="print_line.salary"/> 
                                </td>
                                <td class="text-right">
                                    <span t-field="print_line.entertain"/> 
                                </td>
                                <td class="text-right">
                                    <span t-field="print_line.bill"/> 
                                </td>
                                <td class="text-right">
                                    <span t-field="print_line.charity"/> 
                                </td>
                                <td class="text-right">
                                    <span t-field="print_line.other"/> 
                                </td>
                                <td class="text-right">
                                    <span t-field="print_line.total"/> 
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="clearfix">
                <div class="row">
                    <div class="col-7">
                    </div>
                    <div class="col-5">
                        <table class="table table-sm;page-break-inside: avoid;">
                            <tr>
                                <td><strong>Sub Total Balance:</strong></td>
                                <td class="text-right">
                                    <t t-set="sub_total_view" t-value="'Rp ' + str(doc.sub_total)"/>
                                    <p class="m-0" t-esc="sub_total_view"/>
                                </td>
                            </tr>
                            <tr class="border-black o_subtotal" style="">
                                <td style="background-color:#ebb43f !important;color:#FFF !important;"><strong style="color:#FFF">Total Balance:</strong></td>
                                <td class="text-right" style="background-color:#ebb43f !important;color:#FFF !important;">
                                    <t t-set="total_view" t-value="'Rp ' + str(doc.total_balance)"/>
                                    <p class="m-0" t-esc="total_view"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="report_finance">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="daily_finance.report_finance_document"/>
            </t>
        </t>
    </template>
</odoo>